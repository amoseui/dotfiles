" ============================================================================
" .vimrc of amoseui
" ============================================================================

" install vim-plug
if empty(glob('~/.vim/autoload/plug.vim'))
  silent !curl -fLo ~/.vim/autoload/plug.vim --create-dirs
    \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

" constants
let chromium_path = '~/Workspace/chromium'

" ----------------------------------------------------------------------------
" VIM-PLUG BEGIN
" ----------------------------------------------------------------------------
call plug#begin('~/.vim/plugged')

" theme
Plug 'nanotech/jellybeans.vim'

" edit
Plug 'tpope/vim-commentary'

" browsing
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
Plug 'junegunn/fzf.vim'
Plug 'scrooloose/nerdtree'
Plug 'scrooloose/nerdtree'

" git
Plug 'airblade/vim-gitgutter' " show git diff of a current file
Plug 'rhysd/committia.vim' " split windows for git commit
Plug 'tpope/vim-fugitive' " Gblame
Plug 'vim-airline/vim-airline' " bottom bar
Plug 'vim-airline/vim-airline-themes'

" lang

call plug#end()

" ----------------------------------------------------------------------------
" BASIC SETTINGS
" ----------------------------------------------------------------------------

" set encoding
language messages en_US.UTF-8
set langmenu=en_US.UTF-8
set encoding=utf-8

colorscheme jellybeans
let g:airline_theme='jellybeans'

set colorcolumn=80 " keep 80 columns.
set hlsearch " highlight search
set ignorecase " ignore case on search
set smartcase " don't ignore case with capital letters on search
set incsearch " incremental search
set number " show line numbers
set showmatch " show the matched bracket

" TODO: indent and tab

" show tab caracters
set list
set listchars=tab:>-

" browse files to open as zsh style
set wildmenu
set wildmode=longest:list,full

" remove whitespaces
autocmd BufWritePre * %s/\s\+$//e

" ----------------------------------------------------------------------------
" chromium
" ----------------------------------------------------------------------------

" ----------------------------------------------------------------------------
" python
" ----------------------------------------------------------------------------

" ----------------------------------------------------------------------------
" KEY MAPPINGS
" ----------------------------------------------------------------------------
map <C-n> :NERDTreeToggle<cr>

